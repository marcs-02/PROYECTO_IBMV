<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-header text-center">
            <h2><strong>NUEVA NOTA</strong></h2>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group mb-2">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" style="height: 50px;"
                        autofocus>
                </div>
                <div class="form-floating">
                    <textarea class="form-control my-3" name="description" placeholder="description"
                        id="floatingTextarea2" style="height: 200px"></textarea>
                    <label for="floatingTextarea2">Descripcion</label>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>